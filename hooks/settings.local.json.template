{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(kill:*)",
      "Bash(cat:*)",
      "Bash(python3:*)",
      "Bash(pkill:*)",
      "Bash(find:*)",
      "Bash(sqlite3:*)",
      "Bash(lsof:*)",
      "Bash(test:*)",
      "Bash(ps:*)",
      "Bash(ls:*)",
      "Bash(env)",
      "Bash(pgrep:*)",
      "Bash(jq:*)",
      "Bash(nc:*)",
      "Bash(echo:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git fetch:*)",
      "Bash(git branch:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:code.claude.com)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude-slack/.venv/bin/python3 $HOME/.claude/claude-slack/hooks/on_pretooluse.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude-slack/.venv/bin/python3 $HOME/.claude/claude-slack/hooks/on_stop.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude-slack/.venv/bin/python3 $HOME/.claude/claude-slack/hooks/on_notification.py"
          }
        ]
      }
    ]
  }
}
