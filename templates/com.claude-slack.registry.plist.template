<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.claude-slack.registry</string>

    <key>ProgramArguments</key>
    <array>
        <string>{{HOME}}/.claude/claude-slack/bin/claude-slack-registry</string>
    </array>

    <key>WorkingDirectory</key>
    <string>{{HOME}}/.claude/claude-slack</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>{{HOME}}/.claude/slack/logs/registry_stdout.log</string>

    <key>StandardErrorPath</key>
    <string>{{HOME}}/.claude/slack/logs/registry_stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
    </dict>
</dict>
</plist>
